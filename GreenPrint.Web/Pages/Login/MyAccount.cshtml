@page "{userId:int}"
@model GreenPrint.Web.Pages.Login.MyAccountModel
@{
}
<head>
    <link rel="stylesheet" href="/css/MyAccount.css" asp-append-version="true" />
</head>
<div class="container" style="height:70vh;">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="useralt">
                            </div>
                            @if (Model.User.Customer.FirstName != null)
                            {
                                <h5 class="user-name">@Model.User.Customer.FirstName</h5>
                            }
                            else
                            {
                                <h5 class="user-name">Not Yet A Customer</h5>
                            }
                            <h6 class="user-email">@Model.User.Email</h6>
                        </div>

                        <div class="about">
                            <h5>Reset Password</h5>
                            <form asp-page-handler="PassReset">
                                <div class="form-floating mb-4">
                                    <input type="password" name="oldpassword" id="opass" class="form-control" placeholder="Old Password" />
                                    <label class="form-label" for="opass">Old Password</label>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" name="newpass" id="npass" class="form-control" placeholder="New Password" />
                                    <label class="form-label" for="npass">New Password</label>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" asp-for="@Model.User.Password" id="npassr" class="form-control" placeholder="Repeat New Password" />
                                    <label class="form-label" for="npassr">Repeat New Password</label>
                                </div>
                                <button class="btn btn-outline-primary">Reset</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <form asp-page-handler="Update">
                    <div class="card-body">
                        <div class="row gutters">
                            <input asp-for="@Model.User.Id" type="hidden"/>
                            <input asp-for="@Model.User.Customer.Id" type="hidden"/>
                            <input asp-for="@Model.User.Customer.Address.Id" type="hidden" />
                            <input asp-for="@Model.User.Email" type="hidden" />
                            <input asp-for="@Model.User.Password" type="hidden" />
                            <input asp-for="@Model.User.Role.RoleName" type="hidden" />
                            <input asp-for="@Model.User.Role.Id" type="hidden" />
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Personal Details</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="fullName">First Name</label>
                                    <input type="text" asp-for="@Model.User.Customer.FirstName" class="form-control" id="fullName" placeholder="Enter First Name">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="eMail">Last Name</label>
                                    <input type="text" class="form-control" asp-for="@Model.User.Customer.LastName" id="eMail" placeholder="Enter Last Name">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="phone">Phone</label>
                                    <input type="tel" asp-for="@Model.User.Customer.Phone" class="form-control" id="phone" placeholder="Enter phone number">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="website">Email</label>
                                    <input type="email" asp-for="@Model.User.Customer.Email" class="form-control" id="website" placeholder="Email">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Address</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="Street">Street Name</label>
                                    <input type="name" asp-for="@Model.User.Customer.Address.StreetName" class="form-control" id="Street" placeholder="Enter Street Name">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="ciTy">Street Number</label>
                                    <input type="name" asp-for="@Model.User.Customer.Address.StreetNumber" class=" form-control" id="ciTy" placeholder="Enter Number">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="sTate">City</label>
                                    <input type="text" class="form-control" asp-for="@Model.User.Customer.Address.City" id=" sTate" placeholder="Enter City">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label for="zIp">Zip Code</label>
                                    <input type="text" asp-for="@Model.User.Customer.Address.ZipCode" class=" form-control" id="zIp" placeholder="Zip Code">
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mt-2">
                                <div class="text-right">
                                    <button type="submit" id="submit" name="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>
<div class="container mb-5">
    <div class="row border-bottom border-primary">
        <h1>Your orders</h1>
    </div>

    <div class="row mt-2">
        @if (Model.Orders.Any())
        {
            <table class="table table-light border border-primary table-striped text-center">
                <thead>
                    <tr>
                        <th scope="col">Order number</th>
                        <th scope="col">Date created</th>
                        <th scope="col">Status</th>
                        <th scope="col">View order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td class="">@order.Id</td>
                            <td>@order.OrderDate</td>
                            <td class="@(order.Status switch{ Repository.Enums.OrderStatusEnum.Created => "text-black",  Repository.Enums.OrderStatusEnum.Processing => "text-warning", Repository.Enums.OrderStatusEnum.Shipped => "text-info",  Repository.Enums.OrderStatusEnum.Delivered => "text-success", _ => "" })">
                                @order.Status
                            </td>
                            <td>
                                <a class="btn btn-outline-primary rounded-circle toggleLoader" asp-page="/Orders/Order" asp-route-orderID="@order.Id"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="row mt-2 text-center">
                <h4 class="text-danger">You have made no orders yet!</h4>
            </div>
        }
    </div>
</div>